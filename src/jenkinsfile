pipeline {
    agent {label 'main'}

    stages {
        stage('test') {
            steps {
                dir('src') {
                    sh 'mvn clean compile test'
                }
            }
        }
        stage('Build Application') {
            steps {
                echo 'mvn clean install -Dmaven.test.skip=true'
            }
        }
        stage('Deploy Application') {
            steps {
                echo 'Deploying Application'
            }
        }
    }
}